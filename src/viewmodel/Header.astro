---
import CursoSearch from "../components/CursoSearch.jsx";
import AuthHandler from "../components/AuthHandler.jsx";
import CursosLink from "../network/CursosLink";
import CarritoIcono from "../components/CarritoIcono.jsx";
import CurrencySelector from "../components/CurrencySelector.jsx";
---

<header class="fixed top-0 w-full bg-gradient-to-r from-gray-800 via-black to-gray-900 text-white shadow-lg py-4 z-50">
  <nav class="max-w-7xl mx-auto flex flex-wrap items-center justify-between px-6 gap-y-4">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2">
      <img src="/imagenes/logo.png" alt="LCPrime Logo" class="w-10 h-10 rounded-full" />
      <span class="text-2xl font-extrabold">LCPrime</span>
    </a>

    <!-- Links principales -->
    <div class="flex gap-8 text-lg">
      <a href="/catalogo" class="hover:text-amber-400 transition">Cat√°logo</a>
      <CursosLink client:load />
    </div>

    <!-- Iconos y acciones -->
    <div class="flex items-center gap-4 flex-wrap justify-center">
      <CursoSearch client:load />
      <AuthHandler client:load />
      <CarritoIcono client:load />
    </div>
  </nav>

  <!-- Contenedor para usuario + Selector de Moneda -->
  <div class="flex flex-col items-center mt-2">
    <CurrencySelector  client:load/>
  </div>
</header>
