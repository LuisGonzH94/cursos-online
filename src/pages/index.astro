---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/Carousel.jsx";
---

<Layout >
    <!-- Hero Section -->
    <section class="pt-32 md:pt-40 lg:pt-48 text-center">
      <div class="max-w-5xl mx-auto">
        <h1 class="text-6xl font-extrabold text-orange-700">
          ¡Inspírate y Aprende!
        </h1>
        <p class="text-2xl mt-6 text-gray-800">
          Explora cursos diseñados para el futuro de la creatividad.
        </p>
      </div>
    </section>

    <!-- Slider de imágenes -->
    <section class="py-16">
      <Carousel client:load />
    </section>

</Layout>
